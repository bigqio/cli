{  
   "Version":"1.0.0",
   "AcceptInvalidSSLCerts":true,
   "Files":{  
      "UsersFile":"users.json",
      "PermissionsFile":"permissions.json"
   },
   "Heartbeat":{  
      "Enable":false,
      "IntervalMs":1000,
      "MaxFailures":5
   },
   "Logging":{
      "ConsoleLogging":true,
      "SyslogLogging":true,
      "SyslogServerIp":"127.0.0.1",
      "SyslogServerPort":514,
      "MinimumSeverity":1
   },
   "Notification":{  
      "MsgAcknowledgement":false,
      "ServerJoinNotification":true,
      "ChannelJoinNotification":true
   },
   "Debug":{  
      "Enable":false,
      "LockMethodResponseTime":true,
      "MsgResponseTime":true,
      "ConsoleLogging":true
   },
   "TcpServer":{  
      "Enable":true,
      "IP":"127.0.0.1",
      "Port":8000,
      "Debug":false
   },
   "TcpSslServer":{  
      "Enable":false,
      "IP":"127.0.0.1",
      "Port":8001,
      "PfxCertFile":"server.pfx",
      "PfxCertPassword":"password",
      "AcceptInvalidCerts":true,
      "Debug":false
   },
   "WebsocketServer":{  
      "Enable":true,
      "IP":"127.0.0.1",
      "Port":8002,
      "Debug":false
   },
   "WebsocketSslServer":{  
      "Enable":false,
      "IP":"127.0.0.1",
      "Port":8003,
      "PfxCertFile":"server.pfx",
      "PfxCertPassword":"password",
      "AcceptInvalidCerts":true,
      "Debug":false
   }
}